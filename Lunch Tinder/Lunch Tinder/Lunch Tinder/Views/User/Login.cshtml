@model Lunch_Tinder.ViewModels.VMLogin;

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    </head>
    <body>
    <div class="container-login">
    <h2><span class="underline">Login</span></h2>
    <div class="validation-message">
            @Html.Encode(ViewData["ValidateMessage"])
    </div>
    <form asp-controller="User" asp-action="Login" method="post" novalidate> 
        <div class="form-group">
            <label asp-for="EmailAddress">Email</label>
            <input asp-for="EmailAddress" type="email" id="emailInput" required />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" id="passwordInput" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[!]).{8,}$" required />
        </div>
        <div class="button-container">
            <button id="LoginBttn" type="submit">Login</button>
            <input type="hidden" asp-for="returnUrl" value="@ViewData["returnUrl"]"/>
        </div>
    </form>
    </div>
    </body>
</html>
