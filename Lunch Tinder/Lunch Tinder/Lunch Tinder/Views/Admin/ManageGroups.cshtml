@using Lunch_Tinder.ViewModels;
@model ManageGroupsViewModel

<link rel="stylesheet" href="~/css/Groups.css" asp-append-version="true" />
<script src="~/js/site.js" asp-append-version="true"></script>


<div id="GroupListTable" class="text-center">
    <h1 class="display-4">List of Groups</h1>
    @if (Model.LunchGroups == null || !Model.LunchGroups.Any())
    {
        <p>No Users exist</p>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Group Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var group in Model.LunchGroups)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("DisplayGroups", "Admin", new { groupName = group.GroupName })">@group.GroupName</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <button type="button" class="btn btn-warning btn-lg custom-button" id="openModalButton" data-toggle="modal" data-target="#createGroupModal">
        Create New Lunch Group
    </button>


    <!-- Modal -->
    <div class="modal fade" id="createGroupModal" tabindex="-1" aria-labelledby="createGroupModalLabel" aria-hidden="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createGroupModalLabel">Create New Lunch Group</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <form action="@Url.Action("Create", "ManageGroups")" method="post" id="createGroupForm">
                    @Html.AntiForgeryToken()
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="groupName" class="form-label">Lunch Group Name:</label>
                            <input type="text" class="form-control" id="groupName" name="groupName" minlength="6" maxlength="20" pattern="^[a-zA-Z0-9]+$" required>
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label">Lunch Group Description:</label>
                            <textarea class="form-control" id="Description" name="Description" rows="3" maxlength="255" pattern="^[a-zA-Z0-9\s]+$"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="CancelBtn" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearModal()">Cancel</button>
                        <button type="submit" id="CreateGroupBtn" class="btn btn-primary">Create Group</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


